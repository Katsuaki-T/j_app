<%= link_to 'root',root_path %>
<table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">name</th>
          <td class="detail-value"><%= @topic.user.name %> </td>
        </tr>

        <tr>
          <th class="detail-item">birth_country</th>
          <td class="detail-value"><%= @topic.user.birth_country %> </td>
        </tr>

        <tr>
          <th class="detail-item">sentence</th>
          <td class="detail-value"><%= @topic.sentence.name %></td>
        </tr>

        <tr>
          <th class="detail-item">prefecture</th>
          <td class="detail-value"><%= @topic.user.prefecture.name %> </td>
        </tr>

        <tr>
          <th class="detail-item">identity</th>
          <td class="detail-value"><%= @topic.user.identity %> </td>
        </tr>
      </tbody>
 </table>

<div class='description'>
<tr>
    <th class="detail-item">description</th>
    <td class="detail-value"><%= @topic.description %></td>
  </tr>
</div>
<br>
<% if user_signed_in? %>
  <%if current_user.id == @topic.user_id %>
  
    <%= link_to "topicの編集", edit_topic_path(@topic.id), method: :get, class: "topic-red-btn" %>
    <p class="or-text">or</p>
    <%= link_to "topicの削除", topic_path, method: :delete, class:"topic-destroy" %>

  <% end %>
<% end %>

<%= render "comments/new" %>