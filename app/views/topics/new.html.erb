    <h2 class="topics-sell-title">sentenseを入力</h2>
    <%= form_with model:@topic, local: true do |f| %>
    </div>
 </header>
    
     <%= render 'shared/error_messages', model: f.object %>
<div class="field">
<span class="indispensable">必須</span>

