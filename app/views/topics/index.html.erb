<%= render "shared/header" %>

<h1> Test</h1>

<%= link_to 'kind_japaneseへ',kind_japanese_index_path %>

<h1>
  sentence検索
</h1>
<%= search_form_for @p, url: search_topics_path do |f| %>
  <%= f.label :name_eq, 'sentence名' %>
  <%= f.collection_select :sentence_id_eq, Sentence.all , :id, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.submit '検索' %>
  



<div class='main'>

<% if @topics[0] != nil %>
    <% @topics.each do |topic| %>
      <div class='list'>
<%= link_to topic_path(topic.id) do %>
      </div class='table'>
 <table class="detail-table">
 <br>
      <tbody>
        <tr>
          <th class="detail-item">name</th>
          <td class="detail-value"><%= topic.user.name %> </td>
        </tr>

        <tr>
          <th class="detail-item">birth_country</th>
          <td class="detail-value"><%= topic.user.birth_country %> </td>
        </tr>

        <tr>
          <th class="detail-item">sentence</th>
          <td class="detail-value"><%= topic.sentence.name %></td>
        </tr>

        <tr>
          <th class="detail-item">prefecture</th>
          <td class="detail-value"><%= topic.user.prefecture.name %> </td>
        </tr>

        <tr>
          <th class="detail-item">identity</th>
          <td class="detail-value"><%= topic.user.identity %> </td>
        </tr>
      </tbody>
 </table>
</div>
    <% end %>
  <% end %>
<% end %>
<% end %>
<br>
<%= link_to '投稿する',new_topic_path %>