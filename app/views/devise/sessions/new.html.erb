<%= render "shared/header" %>
<div class="session_top">
<div class="session_top_sentence" >また「やさしいHP」へ私は入ります</div>

</div>

<div class='flash'>
      
      <%= flash[:alert]= "空欄に文字を入れてください。" %>
</div>

<div class='session_main'>
<div class='session_container'>

<br>
     
      

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <br />
    <div class="session_mail">
     
      私は 電子メール（めーる）<%= f.email_field :email, autofocus: true, autocomplete: "email" %>を書きます。
      </div>
  

  <br>
   <div class="session_password">
      
      <% @minimum_password_length %>
      
      次に、<span style="font-weight:800;">暗証番号</span><%= f.password_field :password, autocomplete: "new-password" %>を書きます。
    </div>
  

  </div>

  <div><%= button_tag type: :submit ,class: "session_btn" do %>
          <%= image_tag('explain.png',size: '30x30')  %>
        <% end %>
         </div>
<% end %>

</div>
<div class="session_space"> </div>
<%= render "shared/footer" %>
