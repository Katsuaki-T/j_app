<h2>Sign up</h2>



<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
<br>
<div class="field">
    
    私の<%= f.label :name %>は<%= f.text_field :name, autofocus: true, autocomplete: "name" %>です。
  </div>
 <div class="field">

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<%if @sns_id.present? %>
   <%= hidden_field_tag :sns_auth, true %>

  <% else %>
   <div class="field">
     <%= f.label :password %>
     <% @minimum_password_length %>
     <em>(<%= @minimum_password_length %> characters minimum)</em>
     <br />
     <%= f.password_field :password, autocomplete: "new-password" %>
   </div>

   <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
 <% end %>

<div class="field">
    <%= f.label :birth_country %>
    <%= f.text_field :birth_country, autofocus: true, autocomplete: "birth_country" %>
  </div>
 <div class="field">
  地域
<span class="indispensable">必須</span>

<%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
</div>
<div class="field">
    <%= f.label :identity  %><br />
    <%= f.text_field :identity, autofocus: true, autocomplete: "identity" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
